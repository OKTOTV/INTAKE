{% extends "OktolabIntakeBundle::layout.html.twig" %}

{% block body_main %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData) }}</div>
{% endif %}

  <form class="form-signin" action="{{ path('intake_login_check') }}" method="post">
    <h2 class="form-signin-heading">Please sign in</h2>
    
    <div class="form-group">
    <label for="name">Username</label>
    <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" placeholder="Username" autofocus required />
    </div>

    <div class="form-group">
    <label for="password">Password</label>
    <input type="password" id="password" name="_password" class="form-control" placeholder="Password" required />
    </div>
    {# <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"> #}
    <button class="btn btn-primary btn-block" type="submit">Sign in</button>
  </form>
{% endblock %}