{% extends "::base.html.twig" %}

{% block stylesheets %}
    <link href="{{ asset('bundles/oktolabintake/css/bootstrap.min.css') }}" rel="stylesheet" />
    <link href="{{ asset('bundles/oktolabintake/css/jquery.fileupload.css') }}" rel="stylesheet" />
    <link href="{{ asset('bundles/oktolabintake/css/okto.css') }}" rel="stylesheet" />
{% endblock %}

{% block header %}
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('intake_new')}}">{{ 'intake.project_name'|trans }}</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    {% block nav_head%}
                    {% endblock %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}

{% block messages %}
    {% for flashMessage in app.session.flashbag.get('error') %}
        <div class="container">
            <div class="alert alert-danger">{{ flashMessage|trans }}</div>
        </div>
    {% endfor %}

    {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="container">
            <div class="alert alert-success">{{ flashMessage|trans }}</div>
        </div>
    {% endfor %}

    {% for flashMessage in app.session.flashbag.get('warning') %}
        <div class="container">
            <div class="alert alert-warning">{{ flashMessage|trans }}</div>
        </div>
    {% endfor %}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="starter-template">
            {% block body_main %}
            {% endblock %}
        </div>
    </div>
{% endblock %}

{% block footer %}
    <div class="footer">
      <div class="container">
        <p class="text-muted">{{ version }}</p>
      </div>
    </div>
{% endblock %}